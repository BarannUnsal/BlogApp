@model IEnumerable<Category>

<div class="single-sidebar-widget post-category-widget pt-5 mt-5 pb-3">
    <h5 class="single-sidebar-widget__title">Kategoriler</h5>
    <ul class="cat-list ps-0">
        @foreach (var category in Model)
        {
            <li>
                <a href="@Url.Action("Index", "Home", new {category = category.Id})" class="d-flex justify-content-between">
                    <p>@category.CategoryName</p>
                    <p>(@category!.Posts!.Count())</p>
                </a>
            </li>
        }
    </ul>
</div>