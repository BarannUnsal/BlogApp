<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Esrarga | @ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.cat" />
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="index,follow">
    @*<link rel="canonical" href="" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/jszip-2.5.0/dt-1.13.1/b-2.3.3/b-html5-2.3.3/date-1.2.0/fc-4.2.1/fh-3.3.1/r-2.4.0/sc-2.0.7/sb-1.4.0/sp-2.1.0/sl-1.5.0/datatables.min.css" />
</head>

<body class="body">
    <header>
        @if (User!.Identity!.IsAuthenticated)
        {
            @await Html.PartialAsync("_AdminHeader")
        }
        else
        {
            @await Html.PartialAsync("_Header")
        }
    </header>

    <div class="mt-4 pt-4" style="min-height: 100vh;">
        @RenderBody()
    </div>
    <footer class="footer mt-5 pt-5">
        @await Html.PartialAsync("_Footer")
    </footer>

    <button onclick="topFunction()" id="myBtn">
        <i class="bx bx-up-arrow-alt scrollUp-icon"></i>
    </button>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/jszip-2.5.0/dt-1.13.1/b-2.3.3/b-html5-2.3.3/date-1.2.0/fc-4.2.1/fh-3.3.1/r-2.4.0/sc-2.0.7/sb-1.4.0/sp-2.1.0/sl-1.5.0/datatables.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/notify.js"></script>
    <script src="~/js/notify.min.js"></script>
    @RenderSection("scripts", required: false)

    @if (TempData["logIn"] != null)
    {
        <script type="text/javascript">
            $.notify("Giriş başarılı!", "success");
        </script>
    }

    @if (TempData["logout"] != null)
    {
        <script type="text/javascript">
            $.notify("Çıkış yapıldı!", "success");
        </script>
    }

    @if (TempData["nwsFooter"] != null)
    {
        <script type="text/javascript">
            $.notify("Abone olundu!", "success");
        </script>
    }
</body>

</html>
