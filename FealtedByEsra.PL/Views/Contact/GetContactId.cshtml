@model Contact
@{
    ViewData["Title"] = "GetContactId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container main_section mt-4">
    <h1>Mesaj Detayı</h1>
    <form class="form-control-lg">
        <label>İsim</label>
        <input asp-for="NameSurname" class="form-control" type="text" readonly />
        <br />
        <label>Email</label>
        <input asp-for="Email" class="form-control" type="text" readonly />
        <br />
        <label>Başlık</label>
        <input asp-for="Title" class="form-control" type="text" readonly />
        <br />
        <label>Mesaj İçeriği</label>
        <textarea asp-for="Description" class="form-control" rows="5" cols="15" readonly></textarea>
        <label>Oluşturlma Tarihi</label>
        <input asp-for="CreatedDate" class="form-control" type="text" readonly />
        <br />
    </form>
    <a asp-controller="Contact" asp-action="GetContact" class="read_more_btn">Mesaj Listesi</a>
</div>

