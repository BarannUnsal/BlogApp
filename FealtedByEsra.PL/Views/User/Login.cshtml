@model FealtedByEsra.PL.Models.User.UserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3">
                </div>
                <span class="login100-form-title p-b-26">
                    Hoş Geldin
                </span>

                <div class="wrap-input100 validate-input" data-validate="Kullanıcı Adı Giriniz">
                    <input class="input100" type="text" asp-for="Username">
                    <span class="focus-input100" asp-validation-for="Username"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Şifre Giriniz">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input class="input100" type="password" asp-for="Password">
                    <span class="focus-input100" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="RememberMe" /> Beni Hatırla
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn" type="submit">
                            Giriş Yap
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>